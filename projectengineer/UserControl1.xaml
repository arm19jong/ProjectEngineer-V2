<UserControl x:Class="projectengineer.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectengineer"
             mc:Ignorable="d" Height="39.5" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="namething" Width="Auto" Height="Auto" Grid.Column="3" Grid.Row="0"/>
        <TextBox x:Name="textBox" Width="240" Height="Auto" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="" Margin="0,0,8,0" TextChanged="textBox_TextChanged"  />
        <CheckBox x:Name="checkBox" Content=""  Height="Auto" Grid.Column="0" Grid.Row="0" Margin="0,11,8,0"/>
        <TextBox x:Name="textBox2" Width="45" Height="Auto" Grid.Column="2" Grid.Row="0"/>
        

    </Grid>
</UserControl>
